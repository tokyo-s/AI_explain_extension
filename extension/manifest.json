{
  "manifest_version": 3,
  "name": "Quick Search with SerpAPI",
  "version": "1.0.1",
  "description": "Select text on any webpage and search it via SerpAPI with a single click",
  "author": "Vladimir Stojoc",
  "homepage_url": "https://github.com/vladimirstojoc/quick-search-serpapi",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "quicksearch@serpapi.extension",
      "strict_min_version": "109.0"
    }
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://serpapi.com/*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}